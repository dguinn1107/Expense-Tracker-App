<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.HomePage"
             Title="Home">

    <VerticalStackLayout Spacing="20" Padding="30" HorizontalOptions="Center">
        <Label Text="Welcome to Expense Tracker!" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="Black" />

        <Button Text="Add Expense" 
                Clicked="OnAddExpenseClicked" />

        <Button Text="History" 
                Clicked="OnHistoryClicked" />

        <Button Text="Reports" 
                Clicked="OnReportsClicked" />
    </VerticalStackLayout>

</ContentPage>
